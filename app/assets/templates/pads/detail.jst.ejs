	  <div class="span8 detail-display">
			
			<div class="visual">
				<ul class="nav nav-tabs" id="visualTabs">
				  <li class="active"><a href="#photos" data-toggle="tab">Photos</a></li>
				  <li><a href="#photos" data-toggle="tab">Maps</a></li>
				  <li><a href="#photos" data-toggle="tab">Street View</a></li>
				  <li><a href="#photos" data-toggle="tab">Calendar</a></li>
				</ul>

				<div class="tab-content visualContent" id="visualContent">
					<div class="tab-pane active" id="photos">Photos</div>
					<div class="tab-pane" id="maps">Maps</div>					
					<div class="tab-pane" id="street-view">Street View</div>
					<div class="tab-pane" id="calendar">Calendar</div>										
				</div>
			</div>
			
			
