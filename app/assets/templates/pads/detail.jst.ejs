<div class="row pagedetail container-fluid">
	<h1 style="margin-left: 30px;"><%= pad.escape("name") %></h1>
	<div class="pad-address"><b style="margin-left: 30px;"><%= pad.escape("room_type") %></b> ~ <%= pad.escape("address") %></div>
	  <div class="span8 detail-display">
		
			<div class="visual">
				<ul class="nav nav-tabs" id="visualTabs">
				  <li class="tab" id="photos"><a>Photos</a></li>
				  <li class="tab" id="maps"><a>Maps</a></li>
				  <li class="tab" id="street-view"><a>Street View</a></li>
				  <li class="tab" id="calendar"><a>Calendar</a></li>
				</ul>

				<div class="visualContent" id="visualContent">
				</div>
			</div>

			<div class="details">
				<ul id="detailTabs" class="tabs nav nav-tabs">
					<li class="tab" id="description"><a>Description</a></li>
					<li class="tab" id="amenities"><a>Amenities</a></li>
				</ul>

				<div class="detailContent" id="detailContent">
				</div>
			</div>

		</div>
  
	
		<div class="span4 side">
			<div class="side-detail">
				<div class="book">
					<div class="book-info">
						<form class="booking-form">
							<label class="from">From</label><br>
							<div class="price">$<%= pad.get("price") %></div><br>
							<input 
								type="datetime" 
								name="search[check_in]"
								placeholder="Check in">
			
							<input 
								type="datetime"
								name="search[check_out]"
								placeholder="Check out">
			
							<input 
								type="number" 
								name="search[num_guests]"
								placeholder="1 Guest"><br>
						</div>
				
						<div class="book-btn">			
							<button type="submit" class="btn btn-primary book-btn">BOOK</button>
						</div>
					</form>
				</div>
			
				<div class="owner">
					<div class="profile-pic">
						<img src=<%= pad.owner().get("profile_photo_url") %>><br>
					</div>
					<div class="owner-info">
					Listed by: <%= pad.owner().get("f_name") %> <%= pad.owner().get("l_name") %><br>
					Response Rate: 100%<br>
					Response Time: within a few hours<br>
					Calendar Updated: a week ago<br>
					</div>
				</div>
			</div>
		</div>
</div>
