<div class="row pagedetail container-fluid">
	<!-- facebook like button -->
  <div class="fb-like" data-href="https://www.baconbnb.com" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
	
	<a href="https://twitter.com/share" class="twitter-share-button" data-lang="en" data-url="www.baconbnb.com">Tweet</a>
	
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
