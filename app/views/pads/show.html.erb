<h2><%= @pad.name %></h2>
<%= @pad.address %><br>

<div style='width: 800px;'>
	<div id="map" style='width: 800px; height: 400px;'>
</div>

<h4>Description</h4>
<%= @pad.description %><br>

<h4>Amenities</h4>
<% @pad.amenities.each do |amenity| %><br>
<%= amenity.name%><br>
<% end %>

<h2>Requests</h2>
<% @pad.bookings.each do |booking| %>
	<%= "Start Date: " + booking.start_date.to_s %><br>
	<%= "End Date: " + booking.end_date.to_s %><br>
	<%= "Status: " + booking.status.to_s %><br>
	<%= button_to "Approve Request", approve_booking_url(booking), :method => :put %>
	<%= button_to "Deny Request", deny_booking_url(booking), :method => :put%>
<% end %>