<div class="container">
	<h1><%= current_user.f_name + " " + current_user.l_name %>'s trips</h1>
	
	<div class="well panel-border" style="border-radius: 4px;box-shadow: 2px 2px 3px #666;">
		<div class="pad-profile-photo pull-right">
			<img class="img-rounded" src="<%= current_user.profile_photo.url(:big) %>" style="box-shadow: 2px 2px 3px #666;">
		</div>
		<h3>Bookings</h3>
		<% current_user.bookings.each do |booking| %>
		<% if booking.status == "approved" %>
			<% alert_status = "success" %>
		<% elsif booking.status == "denied"%>
			<% alert_status = "danger" %>
		<% else %>
			<% alert_status = "warning" %>
		<% end %>
		<div class="well alert alert-<%= alert_status %> fade in">
			<h5><%= link_to booking.pad.name, "/#pads/" + booking.pad.id.to_s %></h5>
				<p><%= booking.start_date.to_s + " to " + booking.end_date.to_s %>
  			   <%= booking.status.upcase %>
				</p>
		</div>
		<% end %>
	</div>
</div>